<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Links</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>

    <div class="container">

        <h1>Links</h1>
        <a href="/add">Add Link</a>

        <% for (let x of links) { %>

            <div class="card p-3 mb-4" id="<%=x.id%>">
                <form action="<%=x.id%>/?_method=DELETE" method="POST" class="d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <h2>
                            <%=x.title%>
                        </h2>

                        <div>
                            <%=x.description%>
                        </div>
                        <div class="text-muted">
                            http://localhost:3000/<%=x.title%>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <a class="btn btn-primary mb-1" href="/edit/<%=x.id%>">Edit</a>
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </div>
                </form>
            </div>
            <% } %>
    </div>

</body>

</html>